<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Document</title>
	</head>
	<body>
		{% for product in products %}
			<h1>
				<a href="{{ path('adminProductShow', {'id' : product.id}) }}">{{ product.name }}</a>
			</h1>
			<p>{{ product.description }}</p>
			<h3>{{ product.price }}</h3>
			<h3>{{ product.category.name }}</h3>
			<a href=" {{ path('adminProductUpdate', {'id': product.id}) }} ">
				<h3>Modifier</h3>
			</a>
			<a href=" {{ path('adminProductDelete', {'id' : product.id}) }} ">
				<h3>Supprimer</h3>
			</a>
			<hr>
		{% endfor %}
		<h1>
			<a href=" {{ path('adminProductCreate')}} ">
				Creer un nouveau produit
			</a>
		</h1>
	</body>
</html>
